#if !defined(__LIGHT_VERSION_H__)
#define __LIGHT_VERSION_H__

/*!
  Specify version of SALOME LIGHT module, as follows

  LIGHT_VERSION_MAJOR       : (integer) number identifying major version
  LIGHT_VERSION_MINOR       : (integer) number identifying minor version
  LIGHT_VERSION_MAINTENANCE : (integer) number identifying maintenance version
  LIGHT_VERSION_STR         : (string)  complete version number "major.minor.maintenance"
  LIGHT_VERSION             : (hex)     complete version number (major << 16) + (minor << 8) + maintenance
  LIGHT_DEVELOPMENT         : (integer) indicates development version when set to 1
*/

#define LIGHT_VERSION_MAJOR       @SALOMELIGHT_MAJOR_VERSION@
#define LIGHT_VERSION_MINOR       @SALOMELIGHT_MINOR_VERSION@
#define LIGHT_VERSION_MAINTENANCE @SALOMELIGHT_PATCH_VERSION@
#define LIGHT_VERSION_STR         "@SALOMELIGHT_VERSION@"
#define LIGHT_VERSION             @SALOMELIGHT_XVERSION@
#define LIGHT_DEVELOPMENT         @SALOMELIGHT_VERSION_DEV@

#endif // __LIGHT_VERSION_H__
